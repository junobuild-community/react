{
  "name": "juno-react",
  "description": "A collection of hooks, contexts, and utilities designed to easily integrate Juno into React applications",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/lib/main.d.ts",
      "default": "./dist/main.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/junobuild-community/react"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b ./tsconfig.lib.json && vite build",
    "lint": "eslint .",
    "format": "prettier . --write",
    "format:check": "prettier --check .",
    "preview": "vite preview",
    "test": "tsc -b tsconfig.spec.json --noEmit && vitest",
    "docs": "npm run start --workspace=packages/docs",
    "demo": "npm run start --workspace=packages/demo"
  },
  "peerDependencies": {
    "@junobuild/core": "^0.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/css-modules": "^1.0.5",
    "@types/node": "^22.10.10",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "fake-indexeddb": "^6.0.0",
    "glob": "^11.0.1",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "vite": "^6.0.11",
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-lib-inject-css": "^2.2.1"
  },
  "dependencies": {
    "vitest": "^3.0.4"
  },
  "workspaces": [
    "packages/*"
  ]
}
